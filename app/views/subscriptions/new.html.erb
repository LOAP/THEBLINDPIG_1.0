<div class="container">

<h3>Registering for "<%= @subscription.plan.name %>"</h3>
<p>This entitles you to <strong><%= @subscription.plan.kisses %></strong> looks at the Blind Pig.</p>

<%= simple_form_for @subscription do |f| %>
    <% if @subscription.errors.any? %>
        <div class="error_messages">
          <h2><%= pluralize(@subscription.errors.count, "error") %> prohibited this subscription from being saved:</h2>
          <ul>
            <% @subscription.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.hidden_field :plan_id %>

    <div class="actions">
      <%= f.button :submit, "Confirm", :class => 'btn-success' %>

    </div>
<% end %>
  <%= link_to 'Back', :back, :class => 'btn-link' %>

</div>